generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Admin {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Event {
  id                  String   @id @default(cuid())
  kodeEvent           String   @unique
  namaEvent           String
  pemateri            String   // JSON array of speakers
  tema                String
  deskripsi           String?  // Rich text description (HTML)
  waktuEvent          String   // JSON array of dates and times
  jenisKepesertaan    String   // JSON array of participation types with price and WA link
  benefit             String   // JSON array of benefits
  kodeVoucher         String?  // JSON array of voucher codes
  pertanyaanTambahan  String?  // JSON array of additional questions for registration
  sponsor             String?  // JSON array of event sponsors
  flyerImage          String?
  statusEvent         String   @default("Pendaftaran") // "Pendaftaran", "Berjalan", "Selesai"
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt
  
  pendaftaran         Pendaftaran[]
}

model Pendaftaran {
  id                String   @id @default(cuid())
  namaPendaftar     String
  kotaDomisili      String
  umur              Int
  noWhatsapp        String
  eventId           String
  jenisKepesertaan  String   // "Gratis" or "Berbayar"
  nominalPembayaran Int
  kodeVoucher       String?
  buktiTransfer     String?
  jawabanTambahan   String?  // JSON object of additional answers
  waktuPendaftaran  DateTime @default(now())
  status            String   @default("Pending") // "Pending", "Approved", "Rejected"
  
  event             Event    @relation(fields: [eventId], references: [id])
}

model Referensi {
  id                String   @id @default(cuid())
  namaLembaga       String
  nomorRekening     String
  namaBank          String
  namaPemilik       String
  noWhatsappAdmin   String
  logo              String?
  instagram         String?
  telegram          String?
  whatsappChannel   String?
  facebook          String?
  threads           String?
  youtube           String?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}

model Voucher {
  id          String   @id @default(cuid())
  kodeVoucher String   @unique
  potongan    Int      @default(0)
  status      String   @default("Aktif") // "Aktif", "Tidak Aktif"
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Settings {
  id                    String   @id @default(cuid())
  themeColor            String   @default("emerald") // "emerald", "blue", "purple", "red", "orange"
  landingPageRedaction  String?  // HTML or rich text for landing page
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
}